<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:keepScreenOn">true</item>
        <!--Custom options screen-->
        <item name="android:checkboxStyle">@style/CheckBoxAppTheme</item>

        <item name="android:radioButtonStyle">@style/RadioButtonAppTheme</item>

        <item name="android:seekBarStyle">@style/SeekBarAppTheme</item>
    </style>

    <style name="CheckBoxAppTheme" parent="android:Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/apptheme_btn_check_holo_light</item>
    </style>

    <style name="RadioButtonAppTheme" parent="android:Widget.CompoundButton.RadioButton">
        <item name="android:button">@drawable/apptheme_btn_radio_holo_light</item>
    </style>

    <style name="SeekBarAppTheme" parent="android:Widget.SeekBar">
        <item name="android:progressDrawable">@drawable/apptheme_scrubber_progress_horizontal_holo_light</item>
        <item name="android:indeterminateDrawable">@drawable/apptheme_scrubber_progress_horizontal_holo_light</item>
        <item name="android:minHeight">13dip</item>
        <item name="android:maxHeight">13dip</item>
        <item name="android:thumb">@drawable/apptheme_scrubber_control_selector_holo_light</item>
        <item name="android:thumbOffset">16dip</item>
        <item name="android:paddingLeft">16dip</item>
        <item name="android:paddingRight">16dip</item>
    </style>

    <style name="ButtonDefault">
        <item name="android:background">@drawable/button_default</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:layout_width">@dimen/menu_button_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/menu_button_text_size</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textColor">@drawable/button_text_default</item>
        <item name="android:layout_margin">@dimen/menu_button_margin</item>
        <item name="android:padding">@dimen/menu_button_padding</item>
    </style>

    <style name="TextGameScreen">
        <item name="android:textSize">@dimen/text_game_screen_size</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Label">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:padding">5dp</item>
    </style>
    <style name="HintLabel">
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingLeft">5dp</item>
    </style>

    <style name="ButtonPlayDefault">
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:layout_width">@dimen/button_width</item>
        <item name="android:layout_marginTop">@dimen/button_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/button_margin_bottom</item>
        <item name="android:layout_marginLeft">@dimen/button_margin_left</item>
        <item name="android:layout_marginRight">@dimen/button_margin_right</item>
    </style>

    <style name="ButtonCircular">
        <item name="android:layout_height">@dimen/button_circular_height</item>
        <item name="android:layout_width">@dimen/button_circular_width</item>
    </style>

    <style name="ButtonPlaySample" parent="ButtonCircular">
        <item name="android:background">@drawable/ic_sample</item>
    </style>

    <style name="ButtonPlayRed" parent="ButtonPlayDefault">
        <item name="android:background">@drawable/button_red</item>
    </style>

    <style name="ButtonPlayGreen" parent="ButtonPlayDefault">
        <item name="android:background">@drawable/button_green</item>
    </style>

    <style name="ButtonPlayGray" parent="ButtonPlayDefault">
        <item name="android:background">@drawable/button_gray</item>
    </style>

    <style name="ButtonPlayBlue" parent="ButtonPlayDefault">
        <item name="android:background">@drawable/button_blue</item>
    </style>

    <style name="ButtonPlayYellow" parent="ButtonPlayDefault">
        <item name="android:background">@drawable/button_yellow</item>
    </style>

    <style name="ButtonPlayPink" parent="ButtonPlayDefault">
        <item name="android:background">@drawable/button_pink</item>
    </style>

    <style name="ButtonPlayOrange" parent="ButtonPlayDefault">
        <item name="android:background">@drawable/button_orange</item>
    </style>

</resources>
