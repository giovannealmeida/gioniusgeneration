<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="ButtonDefault">
        <item name="android:background">@drawable/button_default</item>
        <item name="android:drawablePadding">8dp</item>
    </style>

    <style name="textGameScreen">
        <item name="android:textSize">@dimen/text_game_screen_size</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ButtonPlayDefault">
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:layout_width">@dimen/button_width</item>
        <item name="android:layout_marginTop">@dimen/button_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/button_margin_bottom</item>
        <item name="android:layout_marginLeft">@dimen/button_margin_left</item>
        <item name="android:layout_marginRight">@dimen/button_margin_right</item>
    </style>

    <style name="ButtonCircular">
        <item name="android:layout_height">@dimen/button_circular_height</item>
        <item name="android:layout_width">@dimen/button_circular_width</item>
    </style>

    <style name="ButtonPlaySample" parent="ButtonCircular">
        <item name="android:background">@drawable/ic_sample</item>
    </style>

    <style name="ButtonPlayRed" parent="ButtonPlayDefault">
        <item name="android:background">@drawable/button_red</item>
    </style>

    <style name="ButtonPlayGreen" parent="ButtonPlayDefault">
        <item name="android:background">@drawable/button_green</item>
    </style>

    <style name="ButtonPlayGray" parent="ButtonPlayDefault">
        <item name="android:background">@drawable/button_gray</item>
    </style>

    <style name="ButtonPlayBlue" parent="ButtonPlayDefault">
        <item name="android:background">@drawable/button_blue</item>
    </style>

    <style name="ButtonPlayYellow" parent="ButtonPlayDefault">
        <item name="android:background">@drawable/button_yellow</item>
    </style>

    <style name="ButtonPlayPink" parent="ButtonPlayDefault">
        <item name="android:background">@drawable/button_pink</item>
    </style>

    <style name="ButtonPlayOrange" parent="ButtonPlayDefault">
        <item name="android:background">@drawable/button_orange</item>
    </style>

</resources>
