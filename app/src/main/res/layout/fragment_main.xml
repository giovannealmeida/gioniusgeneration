<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <Button
        android:id="@+id/btnPlay"
        android:layout_width="@dimen/menu_button_width"
        android:layout_height="wrap_content"
        android:textSize="@dimen/menu_button_text_size"
        android:layout_centerHorizontal="true"
        android:textColor="@drawable/button_text_default"
        android:text="@string/button_play_text"
        android:layout_margin="@dimen/menu_button_margin"
        style="@style/ButtonDefault"
        android:padding="@dimen/menu_button_padding" />

    <Button
        android:id="@+id/btnHighScores"
        android:layout_width="@dimen/menu_button_width"
        android:layout_height="wrap_content"
        android:textSize="@dimen/menu_button_text_size"
        android:layout_below="@id/btnPlay"
        android:layout_centerHorizontal="true"
        android:textColor="@drawable/button_text_default"
        android:text="@string/button_highscore_text"
        android:layout_margin="@dimen/menu_button_margin"
        style="@style/ButtonDefault"
        android:padding="@dimen/menu_button_padding" />

    <Button
        android:id="@+id/btnCredits"
        android:layout_width="@dimen/menu_button_width"
        android:layout_height="wrap_content"
        android:textSize="@dimen/menu_button_text_size"
        android:layout_below="@id/btnHighScores"
        android:layout_centerHorizontal="true"
        android:textColor="@drawable/button_text_default"
        android:text="@string/button_credits_text"
        android:layout_margin="@dimen/menu_button_margin"
        style="@style/ButtonDefault"
        android:padding="@dimen/menu_button_padding" />

</RelativeLayout>
