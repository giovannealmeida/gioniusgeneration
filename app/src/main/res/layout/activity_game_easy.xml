<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#000"
    tools:context="com.giog.gioniusgeneration.GameEasyActivity">

    <RelativeLayout
        android:id="@+id/rlInfoPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvLevel"
            android:text="NÃ­vel: 1"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tvScore"
            android:text="Score: 0"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:layout_below="@id/tvLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tvGameMode"
            android:text="Modo: "
            android:textColor="@android:color/white"
            android:layout_alignParentRight="true"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <ImageButton
        android:id="@+id/imPlaySample"
        style="@style/ButtonPlaySample"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"/>

    <RelativeLayout
        android:id="@+id/rlButtonPanel"
        android:layout_below="@id/rlInfoPanel"
        android:layout_above="@id/imPlaySample"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/llFirstCol"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnRed"
                style="@style/ButtonPlayRed"/>

            <ImageButton
                android:id="@+id/btnYellow"
                style="@style/ButtonPlayYellow"/>

        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>
